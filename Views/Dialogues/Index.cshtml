@model IEnumerable<maibagamofisa.Models.Dialogue>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-12 mb-3">
                <div class="card chat-box @((item.Id % 2 == 0) ? "chat-left" : "chat-right")">
                    <div class="card-header">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-details">View Details</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="dialogueModal_@item.Id" tabindex="-1" role="dialog" aria-labelledby="dialogueModalLabel_@item.Id" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="dialogueModalLabel_@item.Id">@Html.DisplayFor(modelItem => item.Title)</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>@Html.DisplayFor(modelItem => item.Content)</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<!-- "Create New" button -->
<div class="container">
    <div class="row justify-content-end fixed-bottom mb-3 mr-3">
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-purple">Create New</a>
        </div>
    </div>
</div>

<style>
    .chat-box {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        transition: box-shadow 0.3s;
    }

    .chat-left {
        float: left;
        clear: both;
    }

    .chat-right {
        float: right;
        clear: both;
    }

    .chat-box:hover {
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .modal-dialog {
        max-width: 80%;
    }
</style>
