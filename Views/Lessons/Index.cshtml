@model IEnumerable<maibagamofisa.Models.Lesson>

@{
    ViewData["Title"] = "Lessons Road Map";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
</head>
<body>
    <header>
        <h1>German Learning Road Map</h1>
    </header>

    <div class="road-map">
        <div class="road">
            @foreach (var lesson in Model)
            {
                <div class="chapter" id="chapter-@lesson.Id">
                    <a asp-action="Details" asp-route-id="@lesson.Id">@lesson.Title</a>
                    @if (lesson.IsCompleted)
                    {
                        <span>(Completed)</span>
                    }
                </div>
            }
            <!-- Car -->
            <div class="car" id="car"></div>
        </div>
    </div>

    <footer>
        <p>&copy; 2023 [Your App Name]. All Rights Reserved.</p>
    </footer>

    <script src="~/js/scripts.js"></script>
</body>
</html>
