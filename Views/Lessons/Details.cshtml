@model maibagamofisa.Models.Lesson

@{
    ViewData["Title"] = Model.Title;
}

<h1>@Model.Title</h1>

<div>
    <p>@Model.Content</p>
</div>

<div>
    <h3>Exercises</h3>
    @foreach (var exercise in Model.Exercises)
    {
        <div>
            <p>@exercise.Question</p>
            @foreach (var option in exercise.Options)
            {
                <button class="option-button" data-exercise-id="@exercise.Id" data-correct-answer="@exercise.CorrectAnswer">@option</button>
            }
        </div>
    }
</div>

<form method="post" asp-action="CompleteLesson" asp-route-lessonId="@Model.Id">
    <button type="submit" class="btn btn-primary">Complete Lesson</button>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".option-button");
        buttons.forEach(button => {
            button.addEventListener("click", function () {
                const exerciseId = this.getAttribute("data-exercise-id");
                const correctAnswer = this.getAttribute("data-correct-answer");
                if (this.textContent.trim() === correctAnswer) {
                    alert("Correct!");
                } else {
                    alert("Incorrect, try again!");
                }
            });
        });
    });
</script>
