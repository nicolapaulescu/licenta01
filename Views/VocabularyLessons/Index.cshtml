@model IEnumerable<maibagamofisa.Models.VocabularyLesson>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .lesson-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            overflow: hidden;
        }

        .lesson-image {
            width: 100%; /* Ensure the image takes full width of its container */
            height: 200px; /* Set a fixed height for uniformity */
            object-fit: cover; /* Ensure the image fills the container while maintaining aspect ratio */
            border-radius: 5px 5px 0 0;
        }

        .lesson-content {
            padding: 15px;
        }

        .lesson-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .lesson-actions {
            text-align: right;
        }

        .purple-button {
            background-color: #6a1b9a;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .purple-button:hover {
                background-color: #4a148c;
            }

        .header-image {
            display: block;
            margin: 20px auto;
            width: 300px;
            max-width: 100%;
        }
    </style>

</head>
<div class="container">
    <img src="~/images/Random/vocabulary.jpg" alt="Title Image" class="header-image">
    <div class="row">
        @foreach (var lesson in Model)
        {
            <div class="col-md-4">
                <div class="lesson-card">
                    <img src="@lesson.CoverImagePath" class="lesson-image" />
                    <div class="lesson-content">
                        <h3 class="lesson-title">@lesson.LessonName</h3>
                        <div class="lesson-actions">
                            @if (lesson.LessonId == 1)
                            {
                                <a asp-action="Index" asp-controller="Colors" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 2)
                            {
                                <a asp-action="Index" asp-controller="Fruits" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 3)
                            {
                                <a asp-action="Index" asp-controller="Vegetables" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 4)
                            {
                                <a asp-action="Index" asp-controller="Animals" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 5)
                            {
                                <a asp-action="Index" asp-controller="Daysoftheweeks" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 6)
                            {
                                <a asp-action="Index" asp-controller="Verbs" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 7)
                            {
                                <a asp-action="Index" asp-controller="Bodies" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 8)
                            {
                                <a asp-action="Index" asp-controller="Houses" class="btn purple-button ml-2">Details</a>
                            }
                            else if (lesson.LessonId == 9)
                            {
                                <a asp-action="Index" asp-controller="Jobs" class="btn purple-button ml-2">Details</a>
                            }
                            <!-- Add more conditions for other lesson IDs -->
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

</html>
