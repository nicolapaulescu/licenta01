@{
    ViewData["Title"] = "Word Pairing Game";
}

<h1>Word Pairing Game</h1>

<div id="gameCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="game-box">
                <img src="~/images/gameofwords.jpg" class="d-block w-100" alt="...">
                <a href="@Url.Action("WordMatching", "WordPairs")" class="btn btn-primary">Start Game 1</a>
            </div>
        </div>
        <div class="carousel-item">
            <div class="game-box">
                <img src="~/images/picture2.jpg" class="d-block w-100" alt="...">
                <button class="btn btn-primary">Start Game 2</button>
            </div>
        </div>
        <div class="carousel-item">
            <div class="game-box">
                <img src="~/images/picture3.jpg" class="d-block w-100" alt="...">
                <button class="btn btn-primary">Start Game 3</button>
            </div>
        </div>
        <div class="carousel-item">
            <div class="game-box">
                <img src="~/images/picture4.jpg" class="d-block w-100" alt="...">
                <button class="btn btn-primary">Start Game 4</button>
            </div>
        </div>
        <div class="carousel-item">
            <div class="game-box">
                <img src="~/images/picture5.jpg" class="d-block w-100" alt="...">
                <button class="btn btn-primary">Start Game 5</button>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#gameCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#gameCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<style>
    .carousel-item {
        text-align: center;
        height: 400px; /* Adjust the height as needed */
    }

    .game-box {
        position: relative;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

        .game-box img {
            max-height: 300px; /* Adjust the image height as needed */
            object-fit: cover;
        }

        .game-box button {
            margin-top: 20px;
        }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: #000;
        border-radius: 50%;
    }
</style>
