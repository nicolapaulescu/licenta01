    <title>About Us</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
        }

        .hero {
            background: url('path_to_your_hero_image.jpg') no-repeat center center/cover;
            height: 60vh;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            padding: 0 20px;
        }

            .hero h1 {
                font-size: 3em;
                margin: 0;
            }

            .hero p {
                font-size: 1.2em;
                margin: 10px 0 0;
            }

        .container {
            max-width: 1100px;
            margin: auto;
            overflow: hidden;
            padding: 20px;
        }

        .mission {
            text-align: center;
            padding: 20px 0;
        }

            .mission h2 {
                font-size: 2.5em;
                margin-bottom: 10px;
            }

            .mission p {
                font-size: 1.2em;
                margin-bottom: 10px;
            }

        .features {
            display: flex;
            justify-content: space-between;
            text-align: center;
            flex-wrap: wrap;
        }

        .feature {
            flex: 1;
            padding: 20px;
            margin: 10px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

            .feature i {
                font-size: 2em;
                color: #800080;
            }

            .feature h3 {
                margin: 10px 0;
                font-size: 1.5em;
            }

        .testimonials {
            background: #800080;
            color: white;
            padding: 50px 0;
            text-align: center;
        }

        .testimonial {
            margin: 20px;
            padding: 20px;
            background: white;
            color: #333;
            display: inline-block;
            max-width: 300px;
            border-radius: 10px;
        }

            .testimonial img {
                width: 50px;
                border-radius: 50%;
                margin-top: -40px;
                border: 3px solid #800080;
            }

        .team {
            text-align: center;
            padding: 50px 0;
        }

            .team h2 {
                font-size: 2.5em;
                margin-bottom: 20px;
            }

            .team .member {
                display: inline-block;
                margin: 10px;
                text-align: center;
            }

            .team img {
                width: 150px;
                height: 150px;
                border-radius: 50%;
            }

            .team h3 {
                margin: 10px 0 5px;
                font-size: 1.2em;
            }

        .call-to-action {
            text-align: center;
            padding: 50px 0;
            background: #f4f4f4;
        }

            .call-to-action h2 {
                font-size: 2em;
                margin-bottom: 10px;
            }

            .call-to-action a {
                display: inline-block;
                padding: 10px 20px;
                background: #800080;
                color: white;
                border-radius: 5px;
                text-decoration: none;
                font-size: 1.2em;
            }

        .footer {
            text-align: center;
            padding: 20px;
            background: #333;
            color: white;
        }

            .footer a {
                color: #800080;
                text-decoration: none;
            }
