<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .color-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
        }

        .color-item {
            width: calc(25% - 20px);
            margin: 20px;
            position: relative;
            cursor: pointer;
            border-radius: 5px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            height: 200px; /* Fixed height for uniformity */
        }

            .color-item img {
                width: 100%;
                height: 100%;
                object-fit: cover; /* Ensure uniform image size */
                border-radius: 5px;
                transition: transform 0.3s;
            }

            .color-item:hover img {
                transform: scale(1.1);
            }

        .color-text {
            position: absolute;
            bottom: 10px;
            left: 10px;
            color: white;
            font-size: 18px;
            font-weight: bold;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px 10px;
            border-radius: 5px;
            z-index: 1; /* Ensure it's above the image */
        }

        .color-text-german {
            position: absolute;
            bottom: 50px; /* Adjust positioning */
            left: 10px;
            color: white;
            font-size: 18px;
            font-weight: bold;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 5px 10px;
            border-radius: 5px;
            z-index: 1; /* Ensure it's above the image */
        }

        .color-item:hover .color-text,
        .color-item:hover .color-text-german {
            color: black;
        }
    </style>
</head>
<body>
    <div class="color-container">
        @foreach (var color in Model)
        {
            <div class="color-item">
                <img src="@color.ImagePath" alt="@color.EnglishName" />
                <div class="color-text">@color.EnglishName</div>
                <div class="color-text-german">@color.GermanName</div>
            </div>
        }
    </div>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
</body>
</html>
